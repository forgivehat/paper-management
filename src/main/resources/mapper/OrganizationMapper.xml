<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >


<mapper namespace="com.paper.mapper.OrganizationMapper">

    <!--keyProperty="id"  其中id为Organization类中叫做“id”的成员变量-->
    <insert id="insertOrganization" parameterType="Organization" useGeneratedKeys="true"
            keyProperty="id">
        insert into t_organization(org_name,org_parent_id,org_key,org_level,org_note)
        values (#{name},#{parent_id},#{key},#{level},#{orgnote})
    </insert>

    <update id="updateOrgById" parameterType="Organization">
        update  t_organization set

        where org_id = #{id}
    </update>

    <resultMap id="AccountMapIncludePwd" type="Account">
        <result property="id" column="acc_id"/>
        <result property="username" column="acc_username"/>
        <result property="password" column="acc_password"/>
        <result property="role" column="acc_role"/>
    </resultMap>

    <select id="selectUserById"  resultMap="AccountMapIncludePwd" >
        SELECT * FROM t_account where acc_id = #{id}
    </select>

    <delete id="deleteOrganization" >
        delete from t_organization where org_id = #{id}
    </delete>

